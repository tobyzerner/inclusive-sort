{
    "name": "inclusive-sort",
    "version": "0.1.0-beta.2",
    "description": "Drag and drop sorting that just works â€“ for everyone.",
    "module": "dist/inclusive-sort.js",
    "type": "module",
    "types": "dist/types/index.d.ts",
    "license": "MIT",
    "repository": "tobyzerner/inclusive-sort",
    "files": [
        "dist"
    ],
    "sideEffects": false,
    "scripts": {
        "dev": "vite",
        "build": "tsc --noEmit && vite build && tsc --emitDeclarationOnly",
        "preview": "vite preview",
        "release": "release-it --npm.tag=latest"
    },
    "devDependencies": {
        "@release-it/keep-a-changelog": "^2.3.0",
        "prettier": "^2.6.2",
