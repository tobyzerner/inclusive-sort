    },
    "release-it": {
        "github": {
            "release": true
        },
        "plugins": {
            "@release-it/keep-a-changelog": {
                "filename": "CHANGELOG.md",
                "addUnreleased": true,
                "addVersionUrl": true
            }
        },
        "hooks": {
            "after:bump": "npm run build"
        }
    },
    "prettier": {
        "singleQuote": true
    }
